<%= form_tag do %>

  <div class="field">
    <%= label_tag :email, t('.email') %>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="field">
    <%= label_tag :password, t('.password') %>
    <%= password_field_tag :password, params[:password] %>
  </div>

  <div class="field">
    <%= submit_tag t('.login') %>
  </div>

<% end %>
